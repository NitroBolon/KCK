<Page x:Class="dicc.translacja"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dicc"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="translacja">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0, 10, 0, 0" HorizontalAlignment="Center">
            <TextBox Height="23"  TextWrapping="Wrap"  TextChanged="word_TextChanged" Width="300" Background="Gainsboro" x:Name="word"/>
            <Label Content="Type your word" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Height="25" Foreground="White" HorizontalContentAlignment="Center"/>

            <Button Style="{DynamicResource RoundCorner}" Content="Search/Clear" VerticalAlignment="Top" Width="300" RenderTransformOrigin="1,1" HorizontalAlignment="Center" Height="40" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}" Click="Button_Click_search"/>

        </StackPanel>
        <TextBlock HorizontalAlignment="Center" Height="340" Margin="0, 100, 0, 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" x:Name="result" Foreground="White"/>
    </Grid>
</Page>
